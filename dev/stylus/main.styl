@import 'fonts.styl'
@import 'normalize.styl'
@import 'bxslider.styl'
@import 'nib'


//Colores
azul_tenue = #00359c
azul_fuerte = #0d2d69
amarillo = #ffe829

//OOCSS
/*.ancho
	margin 0 auto
	width 1140px*/
.relativo
	position relative
.absoluto
	position absolute
.fix
	overflow hidden
.left
	float left
.right
	float right

[class^="icon-"], [class*=" icon-"]
	font-family 'icomoon'
	speak none
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

.icon-mail-transp
	&:before
		content "\f003"

.icon-user
	&:before
		content "\f007"

.icon-check
	&:before
		content "\f00c"

.icon-clock
	&:before
		content "\f017"

.icon-map
	&:before
		content "\f041"

.icon-mail-color
	&:before
		content "\f0e0"

.icon-telefono
	&:before
		content "\e602"



alinear()
	display inline-block
	vertical-align top
a
	text-decoration none
ul
p
figure
h1
h2
	margin 0
	padding 0
ul
	list-style none
body
	font-family: 'Open Sans', arial
	font-size: 16px
	font-weight: 400

/*#######################################################################
#	1- Cabecera
#########################################################################*/
header
	background-color: azul_tenue
	padding 5px 1rem
	figure
		text-align: center
		img
			height auto
			max-width 100%
	.info
		text-align: right
		color white
		font-size: 1.1rem
		ul
			margin 10px 0
			li
				display inline-block
				vertical-align top
				&:first-child
					margin-right 7px
				a
					display block
					height 25px
					width 25px
					background-image url(../img/sprite-social.png)
					&:hover
						opacity .8
				&:first-child
					a
						background-position 0 0
				&:last-child
					a
						background-position 25px 0
/*#######################################################################
#	2- Slider
#########################################################################*/
.slider
	font-size: 0
	img
		max-width 100%
		height auto
/*#######################################################################
#	3- Newsletter
#########################################################################*/
.newsletter
	background-color: azul_tenue
	.ancho
		padding .5rem 1rem
		h2
			color white
			font-size: 18px
			font-weight: 300
			text-align: center
		.formulario
			.nombre
			.user
			.mail
			.boton
				position relative
				color #acacac
				text-align: center
				margin 15px auto
				width 244px
				span
					position absolute
					top 10px
					left 8px
					font-size: 1.2rem
				input[type="text"]
				input[type="email"]
					border 0
					box-shadow inset 0 0 5px 0 rgba(10,11,2,.5)
					padding 8px 30px
			.boton
				margin-left auto
				margin-right auto
				width 150px
				input[type="submit"]
					background-color: amarillo
					border 0
					border-bottom 4px solid #897c10
					border-radius 5px
					color #897c10
					font-weight: 700
					padding 12px 15px 12px 35px
					text-transform uppercase
				span
					color #897c10
					left 12px
					top 13px
/*#######################################################################
#	4- Sucursales
#########################################################################*/
.sucursales
	background-color: azul_fuerte
	box-sizing border-box
	color white
	padding 10px 1rem 25px 1rem
	.ancho
		h2
			padding 15px 0
			text-align: center
			text-transform: uppercase
		.sucursal
			text-align: center
			.lugar
				font-size: 18px
				font-weight: 700
				padding 10px 0
				text-transform: capitalize
			.telefono
			.horario
			.direccion
				font-size: 14px
				font-weight: 300
/*#######################################################################
#	5- Mapa
#########################################################################*/
.mapa
	min-height 300px
	width auto
	iframe
		min-height 300px
		width 100%
/*#######################################################################
#	6- Footer
#########################################################################*/
footer
	background-color: azul_fuerte
	color white
	padding 3rem 1rem
	text-align center
	width auto
	.copy
		font-size: 14px
		font-weight: 300
	figure
		img
			height auto
			max-width 100%
/*#######################################################################
#	7- Responsive
#########################################################################*/
@media screen and (min-width:468px)
	header
		&.small
			figure
				text-align: left
@media screen and (min-width:768px)
	header
		&.medium
			figure
			.info
				display inline-block
				vertical-align top
				width 49%
	.newsletter
		&.medium
			.formulario
				text-align: center
				h2
					text-align: left
				.nombre
				.user
				.mail
				.boton
					display inline-block
				.nombre
				.user
				.mail
					margin-right 3.9rem
					width 179px
					input
						padding-right 5px
						width 100%
	.sucursales
		&.medium
			.ancho
				margin 0 auto
				width 70%
				clearfix()
			.sucursal
				text-align: left
				float left
				width 250px
				&:nth-child(2n + 1)
					float right
				/*&:nth-child(1n + 2)
					margin-right 0*/
				.lugar
					padding-left .3rem
	footer
		&.medium
			clearfix()
			.copy
				float left
			figure
				float right
